<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
        
        <label for="name">Name: </label>
        <input type="text" name="pet[name]" id="pet_name">

<p>Select an existing owner or create a new one below.</p>
<p>Existing Owners :</p>

      
  <% @owners.each do |owner| %>
      <input type="radio" 
      name="pet[owner_id]" 
      id="<%=owner.id%>" 
      value="<%=owner.id%>"><%=owner.name%></input><br>
  <%end%>


<br>
  New Owner :
  <br>
  Name:<input type="text" name="owner[name]" id="owner_name">


<input type="submit" value="Create Pet">
</form>